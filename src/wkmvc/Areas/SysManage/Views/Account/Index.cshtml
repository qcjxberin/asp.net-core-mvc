@{
    Layout = null;
}
@model LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>后台登录</title>
    <!--[if IE]>
        <script src="http://libs.useso.com/js/html5shiv/3.7/html5shiv.min.js"></script>
    <![endif]-->
    <link href="/css/sys/login.min.css" rel="stylesheet" />
</head>
<body id="loginBody">
    <div class="login">
        <div class="login_logo">
            <img src="/images/sys/login/login_top_tip.png" />
        </div>
        <div class="login_fields">
            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" asp-antiforgery="true" data-ajax="true" data-ajax-begin="dig.Loading" data-ajax-complete="dig.Complete" data-ajax-failure="dig.Failure" data-ajax-method="Post" data-ajax-success="dig.Success">
                <input asp-for="Account" placeholder="用户名" maxlength="15" required autocomplete="off" />
                <input asp-for="Password" placeholder="密码" maxlength="15" required autocomplete="off" />
                <div class="from_control">
                    <input asp-for="Code" placeholder="验证码" maxlength="4" required autocomplete="off" />
                    <div class="code-img">
                        <img id="imgVerify" src="/sysmanage/account/ValidateCode" alt="看不清？点击更换" onclick="this.src = this.src + '?'" style="vertical-align:middle;" />
                    </div>
                </div>
                <div class="login_fields_submit">
                    <button type="submit">登录</button>
                </div>
            </form>
        </div>
        <div class="success">
            <h1>认证失败</h1>
            <p></p>
            <p class="login_fields_resubmit">
                <a href="javascript:dig.Back();">重新登录</a>
            </p>
        </div>
        <div class="copyright">
            Copyright © 果冻布丁喜之郎
        </div>
    </div>
    <div class="authent">
        <img src="/images/sys/login/puff.svg" />
        <p>身份认证中</p>
    </div>
</body>
</html>
<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js" asp-fallback-src="/lib/jquery/dist/jquery.min.js" asp-fallback-test="window.jQuery"></script>
<script src="http://apps.bdimg.com/libs/jqueryui/1.10.4/jquery-ui.min.js" asp-fallback-src="/js/jquery-ui-1.10.4.custom.min.js" asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.extend"></script>
<script src="/lib/jquery-unobtrusive-ajax/jquery.unobtrusive.ajax.min.js"></script>
<script src="/js/sys/login/sketch.min.js"></script>
<script src="/js/sys/login/stopExecutionOnTimeout.min.js"></script>
<script src="/js/sys/login/login.min.js"></script>
